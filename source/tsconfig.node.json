{
  "extends": "./tsconfig.json",
  "include": ["server.mjs", "vite.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "skipLibCheck": true
  }
}
